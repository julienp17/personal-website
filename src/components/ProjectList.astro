---
import ProjectCard from "@components/ProjectCard.astro";
import { Astro, CollectionEntry } from "@astrojs/runtime";

export interface Props {
  projects: CollectionEntry<"project">["data"];
}

const { projects } = Astro.props;
---

<ul class="grid grid-cols-[repeat(2,1fr)] sm:grid-cols-[repeat(3,1fr)]">
  {projects.map(({ data }) => <ProjectCard project={data} />)}
</ul>
