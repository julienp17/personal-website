---
import { SITE } from "@config";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import ProjectCard from "@components/ProjectCard";
import LinkButton from "@components/LinkButton.astro";
import slugify from "@utils/slugify";
import type { CollectionEntry } from "astro:content";
import socialIcons from "@assets/socialIcons";

export interface Props {
  pageNum: number;
  totalPages: number;
  projects: CollectionEntry<"project">[];
}

const { pageNum, totalPages, projects } = Astro.props;

const prev = pageNum > 1 ? "" : "disabled";
const next = pageNum < totalPages ? "" : "disabled";
---

<Layout title={`Projects | ${SITE.title}`}>
  <Header activeNav="projects" />
  <Main pageTitle="Projects">
    <p>
      Here is a collection of almost all the projects I have ever done.
      <br />
       They each feature a video, description, aswell as a link to the source
      code.
      <br />
      <br />
       Some projects I couldn't find a way to represent graphically, such as a
      recreation of an FTP server, a Unix Shell, or the printf function.
      <br />
       You can find these projects on my
      <LinkButton href={"https://github.com/julienp17?tab=repositories"} className="underline">
        GitHub profile<Fragment set:html={socialIcons["Github"]} />
      </LinkButton>
    </p>
    <ul
      class="mt-4 grid grid-cols-[repeat(2,1fr)] sm:grid-cols-[repeat(3,1fr)]"
    >
      {
        projects.map(({ data }) => (
          <li class="aspect-square">
            <a href={`/projects/${slugify(data)}`}>
              <Image
                src={data.thumbnail}
                alt={data.title}
                class="h-full w-full border-2 border-skin-accent object-cover"
              />
            </a>
          </li>
        ))
      }
    </ul>
  </Main>

  {
    totalPages > 1 && (
      <nav class="pagination-wrapper" aria-label="Pagination">
        <LinkButton
          disabled={prev === "disabled"}
          href={`/posts${pageNum - 1 !== 1 ? "/" + (pageNum - 1) : ""}`}
          className={`mr-4 select-none ${prev}`}
          ariaLabel="Previous"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class={`${prev}-svg`}>
            <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
          </svg>
          Prev
        </LinkButton>
        <LinkButton
          disabled={next === "disabled"}
          href={`/posts/${pageNum + 1}`}
          className={`ml-4 select-none ${next}`}
          ariaLabel="Next"
        >
          Next
          <svg xmlns="http://www.w3.org/2000/svg" class={`${next}-svg`}>
            <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
          </svg>
        </LinkButton>
      </nav>
    )
  }
  <Footer noMarginTop={totalPages > 1} />
</Layout>

<style>
  .pagination-wrapper {
    @apply mb-8 mt-auto flex justify-center;
  }
  .disabled {
    @apply pointer-events-none select-none opacity-50 hover:text-skin-base group-hover:fill-skin-base;
  }
  .disabled-svg {
    @apply group-hover:!fill-skin-base;
  }
</style>
