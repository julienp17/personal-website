---
import { SITE, SOCIALS } from "@config";
import { Image } from 'astro:assets';
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import GoBackButton from "@components/GoBackButton.astro";
import Social from "@components/Social.astro";
import LinkButton from "@components/LinkButton.astro";
import socialIcons from "@assets/socialIcons";
import getSkillIcon from "../utils/getSkillIcon.tsx"
import Arduino from "../assets/images/arduino.png"

export interface Props {
  project: CollectionEntry<"project">;
}

const { project } = Astro.props;
const { title, description, githubLink, youtubeId, startDate, duration, tags } = project.data;
const { Content } = await project.render();
---

<Layout title={`${title} | ${SITE.title}`} description={description}>
  <Header />
  <GoBackButton />
  <main id="main-content">
    <div class="my-4">
      <div class="flex justify-between">
        <h1 transition:name={slugifyStr(title)} class="post-title">
          {title}
        </h1>
        {
          githubLink && (
            <LinkButton href={githubLink || "https://github.com/julienp17"}>
              See on Github
              <Fragment set:html={socialIcons["Github"]} />
            </LinkButton>
          )
        }
      </div>
      <h2>
        {description}
      </h2>
    </div>
    <div class="mb-4">
      <h2 class="opacity-80 mt-4">
        Skills:
      </h2>
      <ul class="flex gap-4 mt-2">
        {tags.map(tag => (
          <li>
            <a href={`/tags/${tag}`}>
              <Image src={getSkillIcon(tag)} title={tag} alt={`${tag} icon`} width="32" height="32" />
            </a>
          </li>
        ))}
      </ul>
    </div>
    <iframe
      width="100%"
      height="350"
      src={`https://www.youtube.com/embed/${youtubeId}`}
      class="border-2 border-skin-accent rounded-md"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen>
    </iframe>
    <Datetime datetime={startDate} showTime={false} size="lg" className="mt-4" />
    <h2 class="opacity-80">
      Duration: {duration}
    </h2>
    <article id="article" role="article" class="prose mx-auto mt-4 max-w-3xl">
      <Content />
    </article>

    <ul class="tags-container">
      {tags.map(tag => <Tag name={slugifyStr(tag)} />)}
    </ul>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
</style>
